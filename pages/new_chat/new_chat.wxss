/* pages/new_chat/new_chat.wxss */
page{
   background: rgba(247, 242, 242, 0.8)
}
form{
  background: rgb(230, 220, 220);
  width: 100%;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
 
}
.input{
  width: 550rpx;
  height: 80rpx;
  background: white;
  border: 1rpx solid white;
  border-radius: 50rpx;
  margin-left: 20rpx;
  display: inline-block;
}
.bottomClass button{
  background: rgb(171, 212, 110);
  width: 120rpx;
  height: 80rpx;
  font-size: 25rpx;
  text-align: center;
  line-height: 80rpx;
  display: inline-block;
  margin-left: 35rpx;
}
.news_right{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding-top: 30rpx;
  padding-right:20rpx;
}
.news_left{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-top: 30rpx;
  padding-left: 20rpx;
}
.news_right .msg .message{
  background: #95d4ff;
  max-width: 300rpx;
 line-height: 60rpx;
 display: inline-block;
  padding: 10rpx 20rpx 10rpx 20rpx;
  border-radius: 15rpx;
}
.news_right .msg .aa{
  height: 0rpx;
 width: 0rpx;
  border: 15rpx solid;
  border-color: rgba(247, 242, 242, 0.8) rgba(247, 242, 242, 0.8) rgba(247, 242, 242, 0.8) #95d4ff;
  display: inline-block;
}
.news_right .avatar{
  width: 90rpx;
  height: 90rpx;
  background: green;
  border-radius: 50%;
}
.news_left .msg .aa{
  height: 0rpx;
 width: 0rpx;
  border: 15rpx solid;
  border-color: rgba(247, 242, 242, 0.8) #95d4ff rgba(247, 242, 242, 0.8) rgba(247, 242, 242, 0.8);
  display: inline-block;
}
.news_left .avatar{
  width: 90rpx;
  height: 90rpx;
  background: green;
  border-radius: 50%;
}
.news_left .msg .message{
  background: #95d4ff;
  max-width: 300rpx;
 line-height: 60rpx;
 display: inline-block;
  padding: 10rpx 20rpx 10rpx 20rpx;
  border-radius: 15rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

#flag{
  height: 10rpx;
}
.buttonHover{
  animation: hover 0.5s ease 1;
}
@keyframes hover{
  0%{
    scale: 1 1;
  }
  50%{
    scale: 0.9 0.9;
  }
  100%{
    scale: 1 1;
  }
  }