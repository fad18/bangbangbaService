/* pages/order_info/order_info.wxss */
page{
  width: 100%;
  height: 100%;
}

.bg{
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgb(236, 236, 236);
}

.col{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.card_style{
  background-color: white;
  padding: 30rpx 40rpx 30rpx 40rpx;
  margin: 0 0 20rpx 0 ;
}

.red{
  color: red;
}

.swiper_picture{
  width: 100%;
  height: 40%;
}

.fill{
  width: 100%;
  height: 100%;
}

.mag{
  font-size: 30rpx;
}

.grey{
  color: rgb(128, 128, 128);
}

/*小标题样式*/
.subtitle{
  font-size: 50rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.subtitle>image{
  width: 20rpx;
  height: 50rpx;
  margin: 0 10rpx 0 0;
}

/*抢单按钮那一栏*/
.pick_button{
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}

.mode{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  align-items: center;
  width: 20%;
  font-size: 25rpx;
}

.mode>image{
  width: 60rpx;
  height: 60rpx;
}

.pick_button>button{
  width: 35%;
  border-radius: 50rpx;
  border:1rpx solid white;
  background-color: blue;
  color: white;
  margin: 10rpx 15rpx 10rpx 15rpx;
}
