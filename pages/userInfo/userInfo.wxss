/* pages/userInfo/userInfo.wxss */
.scroll{
  display:flex;
  flex-direction: column;
  align-items: center;
}
.inputview {
  display: flex;
  flex-direction: row;
  height: 80rpx;
   box-shadow: 0px 0px 50rpx 15rpx #f2f2f2;
   padding: 10rpx 20rpx 10rpx 20rpx;
   border-radius: 20rpx;
   margin-top: 20rpx;
  width: 500rpx;
  align-items: center;
}
.inputview .text{
  font-size: 40rpx;
  white-space:nowrap;
  line-height: 80rpx;
}
.radio{
  box-shadow: 0px 0px 50rpx 15rpx #f2f2f2;
   padding: 10rpx 20rpx 10rpx 20rpx;
   border-radius: 20rpx;
   margin-top: 20rpx;
   width: 400rpx;
}
.inputview .getcode{
  width: 150rpx;
  height: 80rpx;
  white-space:nowrap;
  text-align: center;
  line-height: 80rpx;
  font-size: 35rpx;
}

.button{
  margin-top: 20rpx;
}

.forget{
  color: skyblue;
  margin-top: 20rpx;
}