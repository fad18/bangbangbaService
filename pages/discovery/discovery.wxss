/* pages/discovery/discovery.wxss */
.page{
  width: 100%;
  height: 100%;
}
/*整体flex竖向布局样式*/
.flex_column{
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/*功能菜单样式*/
.function_menu{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  font-size: 25rpx;
}

.function_menu>view{
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.function_menu>view>image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

/*通过flex布局达到表格的效果，表格样式*/
.table{
  border: 1rpx solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 720rpx;
  margin: 2rpx;
  margin-top: 5%;
  display: flex;
  flex-direction: row;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
}

.tc{
  width:100%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.th{
  background-color: red;
  width: 100%;
  height: 100%;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}
.th>image{
  width: 100%;
  height: 100%;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}
.td{
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  width: 100%;
  height: 50%;
  font-size: 35rpx;
  color: black;
}

.td_right1{
  border-top-right-radius: 25rpx;
}

.td_right2{
  border-bottom-right-radius: 25rpx;
}

/*滚动图片样式*/
.swiper_picture{
  width: 100%;
  height: 450rpx;
  margin-bottom: 20rpx;
}

.swiper_picture>swiper{
  width: 100%;
  height: 100%;
}

/*搜索栏样式*/
.flex1{
  width: 100%;
  display: flex;
  justify-content: center;
  padding-bottom: 10rpx;
}
.search{
  display: flex;
  flex-direction: row;
  width: 80%;
  border: 1rpx solid #dadada;
  border-radius: 50rpx;
  padding: 10rpx;
  background-color:white;
}